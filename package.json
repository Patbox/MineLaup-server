{
  "name": "minelaup-server",
  "version": "0.13.0",
  "description": "The server side of the project MineLaup.",
  "author": "Louis Bailleau",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nuxt-ts",
    "build": "nuxt-ts build",
    "build:docker": "docker build -t minelaup/minelaup_server .",
    "start": "cross-env NODE_ENV=production nuxt-ts start",
    "start:docker": "docker run --rm minelaup/minelaup_server",
    "lint": "eslint --ext .js,.vue,.ts --ignore-path .gitignore .",
    "lint:fix": "eslint --ext .js,.vue,.ts --ignore-path .gitignore . --fix",
    "test": "cross-env TEST=test jest --passWithNoTests",
    "coverage": "jest --coverage --passWithNoTests",
    "config": "node ./script/config.script.js",
    "create-user": "node ./script/create-user.script.js"
  },
  "lint-staged": {
    "*.{js,vue,ts}": "npm run lint",
    "*.{css,vue}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "@hapi/joi": "^17.1.1",
    "@nuxt/typescript-runtime": "^0.4.6",
    "@nuxtjs/auth": "^4.9.1",
    "@nuxtjs/axios": "^5.10.3",
    "@nuxtjs/dotenv": "^1.4.1",
    "@nuxtjs/pwa": "^3.0.0-beta.20",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "chalk": "^4.0.0",
    "config-yaml": "^1.1.4",
    "cross-env": "^7.0.2",
    "date-fns": "^2.13.0",
    "express": "^4.17.1",
    "figlet": "^1.4.0",
    "inquirer": "^7.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash.debounce": "^4.0.8",
    "memiens": "^1.0.4",
    "nuxt": "^2.12.2",
    "nuxt-i18n": "^6.11.1",
    "nuxt-property-decorator": "^2.7.2",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.8",
    "sequelize-typescript": "^1.1.0",
    "sqlite3": "^4.2.0"
  },
  "devDependencies": {
    "@nuxt/types": "^0.7.5",
    "@nuxt/typescript-build": "^0.6.6",
    "@nuxtjs/eslint-config-typescript": "^1.0.2",
    "@nuxtjs/eslint-module": "^2.0.0",
    "@nuxtjs/proxy": "^1.3.3",
    "@nuxtjs/stylelint-module": "^3.2.2",
    "@nuxtjs/tailwindcss": "^2.0.0",
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.30",
    "@types/config-yaml": "^1.1.1",
    "@types/hapi__joi": "^17.1.0",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^13.13.5",
    "@types/nuxtjs__auth": "^4.8.4",
    "@types/validator": "^13.0.0",
    "@vue/test-utils": "^1.0.2",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-nuxt": ">=0.5.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue-i18n": "^0.3.0",
    "husky": "^4.2.5",
    "jest": "^24.9.0",
    "lint-staged": "^10.2.2",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "sass-loader": "^8.0.2",
    "stylelint": "^13.3.3",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2",
    "ts-jest": "^25.5.1-alpha.0",
    "vue-jest": "^4.0.0-0"
  }
}
